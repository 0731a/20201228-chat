<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MBTI" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/Mbti1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/MbtiE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E" />

            <RadioButton
                android:id="@+id/MbtiI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/Mbti2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/MbtiS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S" />

            <RadioButton
                android:id="@+id/MbtiN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/Mbti3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/MbtiF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="F" />

            <RadioButton
                android:id="@+id/MbtiT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/Mbti4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/MbtiP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="P" />

            <RadioButton
                android:id="@+id/MbtiJ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="J" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="아이디" />

    <Button
        android:id="@+id/idConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이디 중복 확인" />

    <EditText
        android:id="@+id/nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="닉네임" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나이" />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="이메일" />


    <Button
        android:id="@+id/emailConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 중복 확인" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="핸드폰 번호" />

    <Button
        android:id="@+id/phoneConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="핸드폰 번호 중복 확인" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:maxLength="20"
        android:inputType="textPassword"
        android:text="비밀번호" />

    <EditText
        android:id="@+id/passwordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="비밀번호 확인" />

    <TextView
        android:id="@+id/passwordConfirmResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 상태" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입" />

</LinearLayout>